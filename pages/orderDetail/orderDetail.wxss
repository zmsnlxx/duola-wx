.order-detail {
  min-height: 100vh;
  background: #EDEDED;
}
.order-detail .content {
  padding: 24px 40px;
  background: #FFFFFF;
}
.order-detail .content .title {
  line-height: 25px;
  display: flex;
  justify-content: space-between;
}
.order-detail .content .title .title-name {
  color: #000000;
  font-size: 18px;
}
.order-detail .content .title .title-status {
  font-size: 14px;
}
.order-detail .content .title .title-status.pending {
  color: #596384;
}
.order-detail .content .title .title-status.success {
  color: #16D96C;
}
.order-detail .content .title .title-status.error {
  color: #F67272;
}
.order-detail .content .item {
  margin-top: 16px;
  font-size: 14px;
  display: flex;
}
.order-detail .content .item .label {
  color: #6D6C6D;
  width: 70px;
  margin-right: 28px;
}
.order-detail .content .item .value {
  color: #000000;
}
.order-detail .footer {
  width: calc(100% - 32px);
  position: fixed;
  left: 16px;
  bottom: 32px;
  display: flex;
}
.order-detail .footer .btn {
  width: 72px;
  margin-right: 8px;
}
.order-detail .footer .van-button--plain {
  background: #EDEDED;
}
.order-detail .footer .submit-btn {
  width: calc(100% - 80px);
}
