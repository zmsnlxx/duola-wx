.create-order {
  min-height: 100vh;
  background: #EDEDED;
  padding: 24px;
  box-sizing: border-box;
}
.create-order .item {
  margin-bottom: 24px;
}
.create-order .item .title {
  display: flex;
  line-height: 22px;
}
.create-order .item .title .required {
  color: #E02020;
  margin-right: 5px;
}
.create-order .item .title .label {
  color: #000000;
  font-size: 16px;
  margin-bottom: 8px;
}
.create-order .item .default {
  color: #999999;
}
.create-order .item .radios {
  width: 100%;
  display: flex;
  margin-top: 16px;
}
.create-order .item .radios image {
  width: 20px;
  height: 20px;
}
.create-order .item .radios .van-radio {
  margin-right: 30px;
}
.create-order .item .checkbox {
  margin-top: 16px;
  display: flex;
  flex-wrap: wrap;
  width: 100%;
}
.create-order .item .checkbox .checkbox-item {
  width: 50%;
}
.create-order .item .checkbox .checkbox-item .van-checkbox {
  margin-bottom: 10px;
}
.create-order .footer {
  margin-top: 50px;
  display: flex;
}
.create-order .footer .btn {
  width: 72px;
  margin-right: 8px;
}
.create-order .footer .van-button--plain {
  background: #EDEDED;
}
.create-order .footer .submit-btn {
  width: calc(100% - 80px);
}
.create-order .content {
  width: 100%;
  height: 100%;
  padding-top: 44px;
}
.create-order .content .header {
  height: 44px;
  line-height: 44px;
  display: flex;
  background: #FFFFFF;
  position: fixed;
  top: 50%;
  box-sizing: border-box;
  left: 0;
  width: 100%;
  z-index: 2;
  justify-content: space-between;
  padding: 0 16px;
}
.create-order .content .header .cancel {
  color: #969799;
}
.create-order .content .header .confirm {
  color: #576b95;
}
.create-order .content .value-class {
  flex: none !important;
}
